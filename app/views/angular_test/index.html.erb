<article ng-app="angular_test" ng-controller="CustomerSearchController">
	<section>
		<form class="form-inline">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control"
						name="name"
						type="text"
						placeholder="Enter your name"
						autofocus
						ng-model="name">
			</div>
		</form>
	</section>
	<header>
		<h1 ng-if="name">Hello, {{name}}</h1>
	</header>
</article>